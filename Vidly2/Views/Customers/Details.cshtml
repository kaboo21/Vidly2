@model Vidly2.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (@Model.Bithdate.HasValue)
    {
        <li>Bithdate: @Model.Bithdate.Value.ToShortDateString()</li>
    }  
</ul>

